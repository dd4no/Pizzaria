@page
@model Pizzaria.Pages.OrdersModel
@{
}

<h3>Orders</h3>
<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Pizza Name
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>
                    @order.Id
                </td>
                <td>
                    @order.PizzaName
                </td>
                <td>
                    @order.FinalPrice
                </td>
            </tr>
        }
    </tbody>
</table>